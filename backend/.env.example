# GreenPort Backend Environment Variables
# Copy this file to .env or set these in application.properties

# Server Configuration
SERVER_PORT=8080

# Database Configuration (H2 for demo, PostgreSQL for production)
SPRING_DATASOURCE_URL=jdbc:h2:mem:greenportdb
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=

# For Production (PostgreSQL example):
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/greenport
# SPRING_DATASOURCE_USERNAME=your_username
# SPRING_DATASOURCE_PASSWORD=your_password

# Website Carbon API
CARBON_API_URL=https://api.websitecarbon.com/site
CARBON_API_KEY=your_api_key_here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174
